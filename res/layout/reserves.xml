<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReservesActivity" >

    <LinearLayout
        android:id="@+id/llInsurance"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/insurance" />

        <EditText
            android:id="@+id/txtInsurance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTaxes"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llInsurance"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/taxes" />

        <EditText
            android:id="@+id/txtTaxes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWater"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llTaxes"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/water" />

        <EditText
            android:id="@+id/txtWater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGas"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llWater"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/gas" />

        <EditText
            android:id="@+id/txtGas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElectric"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llGas"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/electric" />

        <EditText
            android:id="@+id/txtElectric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/llHelp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_above="@+id/llPrevNext"
        android:orientation="horizontal" >

        <View
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/txtHelp"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:text="@string/help"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llPrevNext"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:onClick="prevPage"
            android:text="@string/prev"
            android:background="#690"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/next"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>