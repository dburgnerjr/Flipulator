<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SalesMortgageActivity" >

    <LinearLayout
        android:id="@+id/llSalePrice"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/salePrice" />

        <EditText
            android:id="@+id/txtSalePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPercentDown"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llSalePrice"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/percentDown" />

        <EditText
            android:id="@+id/txtPercentDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOfferBid"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llPercentDown"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/offerBid" />

        <EditText
            android:id="@+id/txtOfferBid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInterestRate"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llOfferBid"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/interestRate" />

        <EditText
            android:id="@+id/txtInterestRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llTerm"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llInterestRate"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/term" />

        <EditText
            android:id="@+id/txtTerm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/llBudgetItems"
		        android:layout_width="match_parent"
		        android:layout_height="25sp"
		        android:layout_below="@+id/llTerm"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="0sp"
		            android:layout_height="25sp"
		            android:layout_weight="1"
		            android:text="@string/budgetItems" />		
		    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/llBudgetItemsTxt"
		        android:layout_width="match_parent"
		        android:layout_height="70sp"
		        android:layout_below="@+id/llBudgetItems"
		        android:orientation="horizontal" >
		
		        <EditText
		            android:id="@+id/txtBudgetItems"
		            android:layout_width="fill_parent" 
		           	android:layout_height="wrap_content" 
		            android:scrollbars="vertical"
		            android:inputType="textMultiLine"
		            android:lines="4"
		            android:minLines="2"
		            android:maxLines="4"
		            android:gravity="top|left"
		            android:textSize="12sp"
		            android:ems="10"
		            android:imeOptions="actionDone" />
		    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llRehabBudget"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llBudgetItemsTxt"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRehabBudget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/rehab_budget" />

        <EditText
            android:id="@+id/txtRehabBudget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="12sp"
            android:inputType="numberDecimal" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/llRehabType"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llBudgetItemsTxt"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRehabType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/rehab_class" />

        <Spinner
            android:id="@+id/spnRehabType"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llHelp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_above="@+id/llPrevNext"
        android:orientation="horizontal" >

        <View
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/txtHelp"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:text="@string/help"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llPrevNext"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:onClick="prevPage"
            android:text="@string/prev"
            android:background="#690"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/next"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>